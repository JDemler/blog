<% wrap_layout :layout do %>

  <hr>
  <div>
      <h1><%= current_article.title %></h1>
  </div>
  <%# <time><%= current_article.date.strftime('%b %e %Y') %1></time> %>

  <hr>

  <div class="content">
      <%= yield %>
  </div>

  <br>

  <div class="prevnext">
      <% if current_article.previous_article %>
          <a href=<%= current_article.previous_article.url %> >
              <p><small>&#x25C0;</small> <%= current_article.previous_article.title %></p>
          </a>
      <% end %>
      <% if current_article.next_article %>
          <a href=<%= current_article.next_article.url %> >
              <p> <%= current_article.next_article.title %><small> &#9654;</small></p>
          </a>
      <% end %>
  </div>
<% end %>
